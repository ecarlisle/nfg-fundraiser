<p id="notice"><%= notice %></p>

<h1>Listing Fundraisers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Goal amount</th>
      <th>Current amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fundraisers.each do |fundraiser| %>
      <tr>
        <td><%= fundraiser.first_name %></td>
        <td><%= fundraiser.last_name %></td>
        <td><%= fundraiser.goal_amount %></td>
        <td><%= fundraiser.current_amount %></td>
        <td><%= link_to 'Show', fundraiser %></td>
        <td><%= link_to 'Edit', edit_fundraiser_path(fundraiser) %></td>
        <td><%= link_to 'Destroy', fundraiser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

